<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:columnCount="6"
    android:orientation="horizontal"
    android:rowCount="7"
    tools:context=".TroubleShootingBillActivity" >

    <ImageView
        android:id="@+id/pic"
        android:layout_width="69dp"
        android:layout_gravity="fill_vertical"
        android:layout_rowSpan="6"
        android:src="@drawable/ic_tsb" />
	<TextView
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="0"
        android:text="单号：" />

    <TextView
        android:id="@+id/tvBillID"
        android:layout_width="30dp"
        android:layout_column="2"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:layout_row="0"
        android:text="" />
    <TextView
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="1"
        android:text="姓名：" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="40dp"
        android:layout_column="2"
        android:layout_gravity="left"
        android:layout_row="1"
        android:text="" />

    <TextView
        android:layout_column="3"
        android:layout_gravity="left"
        android:layout_row="1"
        android:text="日期：" />

    <TextView
        android:id="@+id/tvShootingDate"
        android:layout_width="70dp"
        android:layout_column="4"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:layout_row="1"
        android:text=""
        android:textSize="11sp" />

    <TextView
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="2"
        android:text="位置：" />

    <TextView
        android:id="@+id/tvTroubleArea"
        android:layout_column="2"
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:layout_row="2"
        android:text="" />
    <TextView
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="3"
        android:text="类型：" />

    <TextView
        android:id="@+id/tvTroubleType"
        android:layout_column="2"
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:layout_row="3"
        android:text="" />

    <TextView
        android:layout_column="1"
        android:layout_row="4"
        android:text="描述：" />

    <TextView
        android:id="@+id/tvTroubleDetail"
        android:layout_column="2"
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:layout_row="4"
        android:text="" />

    <TextView
        android:id="@+id/tvFlowStatus"
        android:layout_column="5"
        android:layout_row="0"
        android:text="状态：" />

</GridLayout>