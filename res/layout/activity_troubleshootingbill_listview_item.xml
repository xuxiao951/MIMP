<?xml version="1.0" encoding="utf-8"?><GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:columnCount="6"
    android:orientation="horizontal"
    android:rowCount="4" >

    <ImageView
        android:id="@+id/changelog_listitem_pic"
        android:layout_width="69dp"
        android:layout_gravity="fill_vertical"
        android:layout_rowSpan="3"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:layout_gravity="left"
        android:layout_row="0"
        android:layout_column="1"
        android:text="姓名：" 
        />
       <TextView
           android:id="@+id/changelog_listitem_username"
        android:layout_gravity="left"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_width="30dp"
        android:text="" 
        />
          <TextView
        android:layout_gravity="left"
        android:layout_row="1"
        android:layout_column="1"
        android:text="日期：" 
        />

        <TextView
            android:id="@+id/changelog_listitem_changedate"
            android:layout_width="148dp"
            android:layout_column="2"
            android:layout_columnSpan="3"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:text=""
            android:textSize="11sp" />
    
   <TextView
     android:layout_row="2"
    android:layout_column="1"
    android:text="备注：" 
    />
    <TextView
        android:id="@+id/changelog_listitem_remark"
    android:layout_row="2"
    android:layout_column="2"
    android:layout_columnSpan="4"
    android:layout_gravity="fill"
    android:maxLines="1"
    android:text="" 
    />

    <TextView
        android:id="@+id/changelog_listitem_changetype"
        android:layout_column="5"
        android:layout_gravity="right|top"
        android:layout_row="1"
        android:text="类型：" />
    
</GridLayout>